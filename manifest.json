{
  "manifest_version": 2,
  "name": "Hangouts Background Remover",
  "version": "1.0.4",
  "author": "Andrew Gaul",
  "description": "Remove rotating background image from Google Hangouts.",
  "background": {
    "scripts": ["hangouts-background-remover.js"]
  },
  "icons": {
    "48": "paint_roller.svg"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://hangouts.google.com/*",
    "*://lh3.googleusercontent.com/*",
    "*://www.gstatic.com/chat/hangouts/bg/*"
  ]
}
